<% include ./partials/header.ejs %>
<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    .login-page-left {
        width: 50%;
        height: 80vh;

    }

    .login-page-right {
        width: 50%;
        height: 90%;
    }

    .login-bg-img {
        width: 50%;
    }

    .back-button {
        background-color: #007BFF;
        color: white;
        padding: 8px;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        position: absolute;
        top: 10px;
        left: 10px;
    }

    @media screen and (max-width: 762px) {
        .login-page-left {
            width: 100%;
            background-image: url('/images/hotel2/hotel2img2.jpeg');
            background-size: cover;
            background-position: center;
            color: #7A0222;
        }

        .login-page-left h2 {
            color: #7A0222;
            text-shadow: 1px 3px 4px rgba(0, 0, 0, 0.5);
        }

        .login-page-left label {
            color: #fff;
        }

        .login-page-right {
            width: 0%;
            display: none;
        }


        .login-bg-img {
            width: 0;
        }

    }

    @media screen and (max-width: 400px) {
        .back-button {
            font-size: 12px;
            padding: 5px 8px;
        }
    }



    body::-webkit-scrollbar {
        width: 0;
    }
</style>
<nav class="flex h-fit flex-col">
    <div class="div h-10 w-full  bg-[#7A0222]"></div>
    <div class="div flex items-center justify-between py-5 px-14 border-b-2">
        <div class="left">
            <a href="/"><img class="h-[90px]" src="/images/all-seasons_page-0001.jpg" alt=""></a>
        </div>
        <div class="right">
            <ul class="flex gap-10 items-center  ">
                <li class="text-[#7A0222] font-bold"><a href="/">Home</a></li>
                <li class="text-[#7A0222] font-bold"><a href="/about">About</a></li>
                <li class="text-[#7A0222] font-bold"><a href="/gallery">Gallery</a></li>
                <li class="text-[#7A0222] font-bold"><a href="/programs">Our Programs</a></li>
                <li class="text-[#7A0222] font-bold"><a href="/activity">Activities</a></li>
                <li class="text-[#7A0222] font-bold"><a href="/contact">Contact Us</a></li>
                <li class="text-[#7A0222] font-bold"><a href="/login">Login</a></li>
                <h4><i id="menu-btn" class="ri-menu-line"></i></h4>
            </ul>
        </div>
    </div>
</nav>
<div id="slidebar" class="bg-[#7A0222]">
    <div class="left">
        <a href="/"><img class="h-[90px] rounded" src="/images/all-seasons_page-0001.jpg" alt=""></a>
    </div>
    <a href="/">Home</a>
    <a href="/about">About</a>
    <a href="/gallery">Gallery</a>
