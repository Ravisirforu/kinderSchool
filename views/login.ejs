<% include ./partials/header.ejs %>
<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    .login-page-left {
        width: 50%;
        height: 80vh;

    }

    .login-page-right {
        width: 50%;
        height: 100%;
    }

    .login-bg-img {
        width: 50%;
    }

    .back-button {
        background-color: #ED078B;
        color: white;
        padding: 8px;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        position: absolute;
        top: 10px;
        left: 10px;
    }
    nav .right ul li a {
        transition: color 0.5s ease, transform 0.5s ease;
    }

    nav .right ul li a:hover {
        color: #ED078B;
        transform: scale(1.1);
        text-decoration: none;
    }

    @media screen and (max-width: 762px) {
        .login-page-left {
            width: 100%;
            background-image: url('/images/hotel2/hotel2img2.jpeg');
            background-size: cover;
            background-position: center;
            color: #ED078B;
        }

        .login-page-left h2 {
            color: #ED078B;
            text-shadow: 1px 3px 4px rgba(0, 0, 0, 0.5);
        }

        .login-page-left label {
            color: #fff;
        }

        .login-page-right {
            width: 0%;
            display: none;
        }


        .login-bg-img {
            width: 0;
        }

    }

    @media screen and (max-width: 400px) {
        .back-button {
            font-size: 12px;
            padding: 5px 8px;
        }
    }



    body::-webkit-scrollbar {
        width: 0;
    }
</style>
