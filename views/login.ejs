<div class=" login-page flex w-full h-full ">
    <div class="login-page-left bg-white p-8 rounded shadow-md flex flex-col items-center justify-center ">
        <h2 class="text-2xl font-bold mb-8 text-[#ED078B] w-full text-center">Login To Your Account</h2>
        <form class="w-full" action="/login" method="POST">
            <% if (error && error.length> 0) { %>
                <p class="flash-error"
                    style="color: rgb(249, 18, 18); font-weight: 800; text-transform: capitalize; margin: 7px 0;">
                    <%= error %>
                </p>
                <% } %>
                    <div class="mb-5">
                        <label for="email" class="block mb-2 text-sm text-gray-600">Email</label>
                        <input type="email" id="email" name="email" placeholder="Enter your email address"
                            class=" text-black w-full px-3 py-2 placeholder-gray-300 border border-gray-500 rounded-md focus:outline-none focus:ring focus:ring-blue-100 focus:border-blue-300"
                            required>
                    </div>
                    <div class="mb-5">
                        <label for="password" class="block mb-2 text-sm text-gray-600">Password</label>
                        <input type="password" id="password" name="password" placeholder="Enter your password"
                            class="text-black w-full px-3 py-2 placeholder-gray-300 border border-gray-500 rounded-md focus:outline-none focus:ring focus:ring-blue-100 focus:border-blue-300"
                            required>
                    </div>
                    <button type="submit"
                        class="w-full py-2 px-4 border border-transparent rounded-md text-white bg-[#ED078B] hover:bg-[#ED078B] focus:bg-[#ED078Bdf] active:bg-[#ED078B] transition duration-150 ease-in-out">Login</button>
        </form>
        <a class="mt-3 text-sm hover:text-[#ED078B] " style="text-shadow: 1px 3px 4px rgba(0, 0, 0, 0.5);" href="/register">New User
            ? Register to your
            account
        </a>
    </div>
    <div class="login-page-right login-bg-img" style="position: relative;">
        <img src="/images/1.jpg" alt="login" class=" w-full h-full object-cover">
        <h1 class="text-white font-bold "
            style="position: absolute; top: 40%;left: 5%;width: 60%;font-size: 25px;text-shadow: 1px 3px 4px rgba(0, 0, 0, 0.5);">
            WELCOME TO ALL SEASONS PRE-SCHOOL</h1>
    </div>
    
</div>
